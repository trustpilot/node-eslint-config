{
  "name": "eslint-config-trustpilot",
  "version": "4.2.1",
  "description": "Shared ESLint config for Trustpilot projects",
  "homepage": "https://github.com/trustpilot/node-eslint-config",
  "repository": "https://github.com/trustpilot/node-eslint-config.git",
  "author": "Trustpilot",
  "license": "MIT",
  "main": "default.js",
  "scripts": {
    "lint": "eslint --ext .js .",
    "lint:fix": "npm run lint -- --fix"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "1.x",
    "@typescript-eslint/parser": "1.x",
    "babel-eslint": "10.x",
    "eslint": "5.x",
    "eslint-plugin-babel": "5.x",
    "eslint-plugin-html": "5.x",
    "eslint-plugin-prettier": "3.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "^1.2.0",
    "prettier": "1.x"
  },
  "devDependencies": {
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/commit-analyzer": "6.1.0",
    "@semantic-release/git": "7.0.8",
    "@semantic-release/github": "5.2.10",
    "@semantic-release/npm": "5.1.7",
    "@semantic-release/release-notes-generator": "7.1.4",
    "babel-eslint": "10.0.1",
    "commitlint": "7.6.1",
    "conventional-changelog-eslint": "3.0.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "2.3.0",
    "prettier": "1.17.1",
    "semantic-release": "15.13.12"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  }
}
